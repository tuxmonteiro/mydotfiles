[user]
	name = Marcelo Monteiro
	email = <See github>
[push]
	default = matching
[core]
	editor = vim
	whitespace = trailing-space,space-before-tab
	excludesfile = /Users/m.monteiro/.gitignore
[color]
	ui = true
[alias]
	pu = !sh -c 'git pull $1 && git push $1'
	st = status -s
	com = commit -m
    co = commit
	ch = checkout
    tree = log --graph --decorate --pretty=oneline --abbrev-commit --all
    log = log --follow $@
